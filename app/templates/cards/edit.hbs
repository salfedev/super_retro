<h2>Edit Card</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
      {{input type="text" value=model.author class="form-control" placeholder="Author"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Text</label>
    <div class="col-sm-10">
      {{input type="text" value=model.text class="form-control" placeholder="Your text here"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Votes</label>
    <div class="col-sm-10">
      {{input type="text" value=model.votes class="form-control" placeholder="Number of votes"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action "saveCard" model}}>Save changes</button>
    </div>
  </div>
</div>